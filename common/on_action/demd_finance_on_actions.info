on_war_started = {
	on_actions = { demd_on_war_started }	
}

demd_on_war_started = {
	trigger = { using_cb = religious_war }
	effect = { 
		every_war_defender = { 
			limit = {
				has_government = feudal_government
			}
			trigger_event = { on_action = demd_on_join_holy_war } 
		} 
		every_war_attacker = { 
			limit = {
				has_government = feudal_government
			}
			trigger_event = { on_action = demd_on_join_holy_war } 
		} 
	}
}

